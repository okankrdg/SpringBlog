@model List<Category>
@{
    ViewBag.Title = "Categories";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Manage Categories</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped" data-table="true">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category Name (Post Count)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.Id</td>
                        <td>@cat.CategoryName (@cat.Posts.Count())</td>
                        <td>
                            <a href="@Url.Action("Edit",new {id=cat.Id })" class="btn btn-info"><i class="fas fa-edit"></i></a>
                            <a href="#" class="btn btn-danger" data-delete-id="@cat.Id" data-delete-name="@cat.CategoryName" data-delete-action="@Url.Action("delete")"><i class="fas fa-trash"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
    <!-- /.card-body -->
</div>
@Html.Partial("_DeleteModalPartial")