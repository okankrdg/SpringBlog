@model List<Category>
@{
    ViewBag.Title = "Categories";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped" data-table="true">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category Name (Post Count)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.Id</td>
                        <td>@cat.CategoryName (@cat.Posts.Count())</td>
                        <td>Edit | Delete</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <!-- /.card-body -->
</div>

