@model Category
@{
    ViewBag.Title = "Edit Category";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-9">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Edit Category:@Model.CategoryName</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                @using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { @class = "" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div class="form-group">
                            @Html.LabelFor(x => x.CategoryName)
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Enter Category Name" })
                            @Html.HiddenFor(x => x.Id)
                            @Html.ValidationMessageFor(x => x.CategoryName, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Slug)
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.Slug, new { @class = "form-control", placeholder = "Enter-short-url" })
                                <div class="input-group-append">
                                    <a id="refreshSlug" href="#" class="btn btn-outline-dark"><i class="fas fa-sync-alt"></i></a>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(x => x.Slug, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <a href="@Url.Action("Index")" class="btn btn-warning">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts
 {
    <script>
        $(function () {
            $('#CategoryName').change(function () {
                var catName = $(this).val();
                $.post("@Url.Action("ConverToSlug")", { catName: catName }, function (data) {
                    if (!$('#Slug').val()) {
                        $("#Slug").val(data);
                        //validation trigger
                        $('#Slug').focus();
                        $('#Slug').focusout();
                        //validation trigger
                    }

                });
            });
            $('#refreshSlug').click(function () {
                var catName = $('#Slug').val();
                $.post("@Url.Action("ConverToSlug")", { catName: catName }, function (data) {
                    if (catName != null) {
                        $("#Slug").val(data);
                    }
                });
            });
        })
    </script>

}
